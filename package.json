{
  "name": "manhua-reader",
  "version": "1.0.0",
  "description": "A modern manga reader application built with Electron and Vue.js",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:backend": "cd backend && mvn clean package -DskipTests",
    "build:all": "npm run build && npm run build:backend",
    "build:electron": "node build-electron-forge.js",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5174 && electron .\"",
    "electron:build": "node build-electron-forge.js",
    "postinstall": "electron-forge install"
  },
  "keywords": [
    "manga",
    "reader",
    "electron",
    "vue"
  ],
  "author": "Manga Reader Team",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^4.4.0",
    "concurrently": "^8.2.0",
    "electron": "^26.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "vue-tsc": "^1.8.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "axios": "^1.5.0",
    "element-plus": "^2.4.0",
    "pinia": "^2.1.0",
    "vue": "^3.3.0",
    "vue-router": "^4.2.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Manga Reader",
        "executableName": "manga-reader",
        "extraResource": [
          "backend/target/*.jar"
        ],
        "ignore": [
          "/src",
          "/electron",
          "/backend/src",
          "/backend/pom.xml",
          "/backend/target/classes",
          "/backend/target/generated-sources",
          "/backend/target/maven-archiver",
          "/backend/target/maven-status",
          "/build-electron.js",
          "/build-electron-forge.js",
          "/tsconfig.electron.json",
          "/.git",
          "/node_modules/.cache"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "manga_reader"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "__npminstall_done": false
}
